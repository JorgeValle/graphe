doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content=metaDescription)
    meta(property="og:title", content=documentTitle)
    meta(property="og:url", content=canonicalUrl)
    meta(property="og:description", content=metaDescription)
    meta(property="og:image", content="/front/assets/images/jorge-valle.jpg")
    title=`${documentTitle} | Jorge Valle | JavaScript, web development, and machine learning`
    link(rel="canonical", href= canonicalUrl)
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Domine:400,700|Roboto:300,400")
    link(rel="stylesheet", href="/front/assets/styles/styles.css")

  body.container

    div#fb-root

    header.header
      h1 Jorge Valle
      ul
        li
          a(href="/", title="What I do, with links to work, and social media profiles") Home
        li
          a(href="/timeline", title="A timeline view of my professional and personal life") Timeline
        li
          a(href="/blog", title="Posts focusing on JavaScript, deep learning, and web development") Blog

    div.image
      img(src=`/front/assets/images/dist/${headerImage.name}.jpg`, alt=headerImage.description, title=headerImage.description)

    main.content
      block content

    include signature

    include footer

