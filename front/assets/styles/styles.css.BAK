body {
  display: grid;
  grid-template-columns: 7% 5% calc(200px + 35%) calc(25% - 100px);
  grid-template-rows: auto;
}
header {
  /* margin-top: 15px; */
  grid-column: 2 / 4;
  margin-bottom: 15px;
}
header ul {
  font-weight: 400;
}
.image {
  display: grid;
  grid-template-columns: 100%;
  grid-template-rows: 100px;
}
.image img {
  grid-column: 1;
  grid-row: 1;
  height: 150px;
}
.content {
  margin: 15px 0 30px;
  grid-column: 3 / 3;
  padding-right: 25px;
}
.footer {
  grid-column: 3 / 3;
  font-weight: 400;
}
.light-grey {
  background-color: #F7F7F7;
}
.medium-grey {
  background-color: #575757;
}
.dark-grey {
  background-color: #333333;
  color: #333333;
}
table th,
table td {
  padding: .5rem;
  border-top: 1px solid #F7F7F7;
}
li:not(first) {
  margin-top: 5px;
}
footer {
  margin: 15px 0 30px;
  color: #575757;
}
hr {
  border: 0;
  height: 0;
  border-top: 1px solid #EDEDED;
}
.quote-hr {
  border: 0;
  height: 0;
  border-top: 1px dotted #EDEDED;
}

main h3 {
  margin-top: 45px;
}
main h3::before {
  content: "# ";
  color: #575757;
}
em {
  font-style: normal;
}
