  /* background-color: #333333; */
  border-top: 1px solid #EDEDED;
  grid-column: 1 / 3;
}
.signature {
  grid-column: 3 / 4;
  /* background-color: #333333; */
  border-top: 1px solid #EDEDED;
  border-right: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
  color: #333333;
  padding: 15px 25px 30px 0;
  font-family: Domine;
  font-size: 1.17em;
}
